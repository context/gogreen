.statbox
  %h1
    = @team.name

- if logged_in? && pledge = @team.pledges.find_by_user_id( current_user.id )
  .statbox
    %h1
      Your pledge:
    .pledge_details
      - pledge.commitments.each do |commitment, days|
        %p 
          = Pledge::COMMITMENTS.rassoc( commitment ).first
          = days 
          days a week
        -#%p
          saving
          = pledge.calculate_impact( [[commitment,days]]).to_f.round_to(1)
          lbs of CO2
      %p
        ==Instead of driving #{pledge.destination_round_trip.round} miles every day by yourself
      %p
        Saving
        = pledge.weekly_commitment_impact.to_f.round_to(1)
        lbs of CO2

  .statbox
    .statboxtopbg
      %h2 
        YOUR IMPACT:
        %span
          = ( pledge.total_impact || 0.0 ).round_to(1)
        lbs of CO2 reduced!
    .statcontent
      .statcontenttopbg
        .statcontentbottombg
          = render :partial => 'shared/impact', :locals => { :source => pledge, :contest => pledge.team.contest } 

.statbox
  .statboxtopbg
    %h2 
      TEAM IMPACT:
      %span
        = ( @team.total_impact || 0.0 ).round_to(1)
      lbs of CO2 reduced!
  .statcontent
    .statcontenttopbg
      .statcontentbottombg
        = render :partial => 'shared/impact', :locals => { :source => @team, :contest => @team.contest }

= render :partial => 'shared/tell_a_friend', :locals => { :source => @team }
